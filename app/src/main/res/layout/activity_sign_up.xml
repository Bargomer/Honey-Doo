<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="barazin.honeydoo.SignUpActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userSignup"
        android:hint="Username"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signupPass"
        android:hint="Password"
        android:layout_below="@+id/userSignup"
        android:layout_centerHorizontal="true"
        android:password="true"
        android:maxLines="1"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reenterPass"
        android:hint="Re-enter Password"
        android:layout_below="@+id/signupPass"
        android:layout_centerHorizontal="true"
        android:password="true"
        android:maxLines="1"
        android:imeActionId="@+id/edittext_action_signup"
        android:imeActionLabel="signup"
        android:imeOptions="actionUnspecified"
        />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reenterPass"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
