<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/amber"
    tools:context="barazin.honeydoo.RewardActivity">


    <TextView
        android:id="@+id/rewardNameTitle"
        android:text="Reward Title"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/rewardNameEdit"
        android:hint="Insert list name"
        android:textColor="@color/black"
        android:layout_below="@+id/rewardNameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/rewardDescription"
        android:text="Reward Description"
        android:textSize="30dp"
        android:layout_below="@id/rewardNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/rewardDescriptionEdit"
        android:hint="Insert list name"
        android:textColor="@color/black"
        android:layout_below="@+id/rewardDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/submitRewardName"
        android:layout_below="@+id/rewardDescriptionEdit"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
