<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/amber"
    tools:context="barazin.honeydoo.TaskListAcitivty">

    <EditText
    android:id="@+id/taskTitleEdit"
    android:hint="Title of Task"
    android:textColor="@color/black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/honeyPointsEdit"
        android:hint="Value: Honey Points"
        android:textColor="@color/black"
        android:layout_below="@+id/taskTitleEdit"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/dooPointsEdit"
        android:hint="Value: Honey Points"
        android:textColor="@color/black"
        android:layout_below="@+id/honeyPointsEdit"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/taskDescription"
        android:hint="Value: Honey Points"
        android:textColor="@color/black"
        android:layout_below="@+id/dooPointsEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/taskSubmitBtn"
        android:text="Submit"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_below="@id/taskDescription"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
